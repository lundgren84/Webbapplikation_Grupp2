@model Tournament.net.Models.TournamentViewModel

@{
    ViewBag.Title = "TournamentBracket";
}
<h2>TreeTest</h2>
<div ng-controller="TournamentBracketController" data-ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))">
    <h1>{{hello}}</h1>
    <h2>Champions</h2>
    <div class="row">
        <div class="col-xs-3" style="background-color:darksalmon">
            <div ng-repeat="p in Tournament.Players">
                <div class="row">
                    <div class="col-xs-12">
                        <div style="border-top:2px solid black;border:2px solid black">
                            <img style="width:20%" src="{{p.ImgURL}}" />
                            <span style="{{sideUsernameStyle}}">{{p.UserName}}</span><br />
                            <span style="font-size:xx-large">Position: {{p.TournamentPosition}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class=col-xs-8 style="background-color:green">
            @* TOP *@
            <div class="row" style="background-color:Blue">
                <div>
                    <div style="margin-left:40%" class="col-xs-3">
                        <div>
                            <span style="font-size:600%;border:solid 5px black;border-radius:50%">?</span>
                        </div>
                    </div>              
                </div>
            </div>
            @* Middle1 *@
            <div class="row" style="background-color:Blue">
                <div>
                    <div style="margin-left:28%" class="col-xs-3">
                        <div>
                            <span style="font-size:600%;border:solid 5px black;border-radius:50%">?</span>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div>
                            <span style="font-size:600%;border:solid 5px black;border-radius:50%">?</span>
                        </div>
                    </div>                
                </div>
            </div>
            @* Middle2 *@
            <div class="row" style="background-color:Blue">
                <div>
                    <div style="margin-left:15%" class="col-xs-3">
                        <div>                        
                            <span  style="width:100px;font-size:600%;border:solid 5px black;border-radius:50%">?</span>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div>
                            <span style="width:100px;font-size:600%;border:solid 5px black;border-radius:50%">?</span>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div>
                            <span style="width:100px;font-size:600%;border:solid 5px black;border-radius:50%">?</span>
                        </div>
                    </div>
                </div>
            </div>
            @* Bottom *@
            <div class="row" style="background-color:yellow">
                <div ng-repeat="p in Tournament.Players">
                    <div class="col-xs-3">
                        <div>
                            <img style="width:100px" src="{{p.ImgURL}}" />
                            <span style="font-size:xx-large">{{p.UserName}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

