
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.Name + "!", "Edit", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })

            </li>
            <li>@Html.ActionLink("Logout", "Logout", "Authentication")</li>
        </ul>
    }
}
else
{
   
            var options = new AjaxOptions()
            {
                HttpMethod = "",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "AuthenticationDiv"
        };
    
    <ul class="nav navbar-nav navbar-right">
        <li>@Ajax.ActionLink("Register", "Register", "Authentication","null",options)</li>
        <li>@Html.ActionLink("Register", "Register", "Register", routeValues: null, htmlAttributes: new { id = "" })</li>
        <li>@Html.ActionLink("Login", "Login", "Login", routeValues: null, htmlAttributes: new { id = "" })</li>
    </ul>

}








